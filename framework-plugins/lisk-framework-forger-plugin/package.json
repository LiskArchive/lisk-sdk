{
	"name": "@liskhq/lisk-framework-forger-plugin",
	"version": "0.1.0",
	"description": "A plugin for lisk-framework that provides forging HTTP API endpoints to manage forging and enables monitoring capabilities.",
	"author": "Lisk Foundation <admin@lisk.io>, lightcurve GmbH <admin@lightcurve.io>",
	"license": "Apache-2.0",
	"keywords": [
		"lisk",
		"blockchain",
		"forging"
	],
	"homepage": "https://github.com/LiskHQ/lisk-sdk/tree/master/framework-plugin/lisk-framework-forger-plugin#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/LiskHQ/lisk-sdk.git"
	},
	"bugs": {
		"url": "https://github.com/LiskHQ/lisk-sdk/issues"
	},
	"engines": {
		"node": ">=12.13.0 <=12",
		"npm": ">=6.12.0"
	},
	"main": "dist-node/index.js",
	"scripts": {
		"clean": "./scripts/clean.sh",
		"format": "prettier --write '**/*'",
		"lint": "eslint --ext .js,.ts .",
		"lint:fix": "eslint --fix --ext .js,.ts .",
		"test": "jest --config=./test/unit/jest.config.js ",
		"test:coverage": "jest --config=./test/unit/jest.config.js  --coverage=true --coverage-reporters=text",
		"test:watch": "npm test -- --watch",
		"prebuild": "rm -r dist-node/* || mkdir dist-node || true",
		"build": "tsc",
		"test:unit": "jest --config=./test/unit/jest.config.js --coverage=true --coverage-reporters=json --verbose",
		"test:functional": "jest --config=./test/functional/jest.config.js --runInBand",
		"build:check": "node -e \"require('./dist-node')\"",
		"prepublishOnly": "npm run lint && npm test && npm run build && npm run build:check"
	},
	"dependencies": {
		"@liskhq/lisk-db": "0.1.0",
		"@liskhq/lisk-utils": "0.1.0",
		"@liskhq/lisk-validator": "0.4.0-alpha.0",
		"@liskhq/lisk-cryptography": "2.5.0-alpha.0",
		"@liskhq/lisk-codec": "0.1.0",
		"@liskhq/lisk-transactions": "4.0.0-alpha.0",
		"cors": "2.8.5",
		"express": "4.17.1",
		"express-rate-limit": "5.1.3",
		"fs-extra": "9.0.0",
		"ip": "1.1.5",
		"lisk-framework": "0.6.0-alpha.0"
	},
	"devDependencies": {
		"@types/cors": "2.8.6",
		"@types/express": "4.17.6",
		"@types/express-rate-limit": "5.0.0",
		"@types/ip": "1.1.0",
		"@types/jest": "26.0.3",
		"@types/jest-when": "2.7.1",
		"@types/node": "12.12.11",
		"@typescript-eslint/eslint-plugin": "3.5.0",
		"@typescript-eslint/parser": "3.5.0",
		"axios": "0.19.2",
		"eslint": "7.3.1",
		"eslint-config-lisk-base": "1.2.2",
		"eslint-config-prettier": "6.11.0",
		"eslint-plugin-import": "2.22.0",
		"eslint-plugin-jest": "23.17.1",
		"fs-extra": "9.0.0",
		"jest": "26.1.0",
		"jest-extended": "0.11.5",
		"jest-when": "2.7.2",
		"prettier": "2.0.5",
		"source-map-support": "0.5.19",
		"ts-jest": "26.1.1",
		"ts-node": "8.6.2",
		"tsconfig-paths": "3.9.0",
		"typescript": "3.8.3"
	}
}
