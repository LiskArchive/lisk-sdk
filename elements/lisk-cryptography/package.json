			"optional": true
		},
		"@chainsafe/blst": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/jest": "29.2.3",
		"@types/jest-when": "3.5.2",
		"@types/js-yaml": "4.0.1",
		"@types/node": "18.15.3",
		"@typescript-eslint/eslint-plugin": "5.44.0",
		"@typescript-eslint/parser": "5.44.0",
		"benchmark": "2.1.4",
		"eslint": "8.28.0",
		"eslint-config-lisk-base": "2.0.1",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jest": "27.1.6",
		"glob": "7.1.7",
		"jest": "29.3.1",
		"jest-extended": "3.2.0",
		"jest-when": "3.5.2",
		"js-yaml": "4.1.0",
		"prettier": "2.8.0",
		"source-map-support": "0.5.21",
		"ts-jest": "29.0.3",
		"ts-node": "10.9.1",
		"tsconfig-paths": "4.1.0",
		"typescript": "5.0.2"
	}
