		"sodium-native": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/ed2curve": "0.2.2",
		"@types/jest": "26.0.21",
		"@types/jest-when": "2.7.2",
		"@types/js-yaml": "4.0.1",
		"@types/node": "12.20.6",
		"@typescript-eslint/eslint-plugin": "4.19.0",
