		"benchmark": "2.1.4",
		"eslint": "7.22.0",
		"eslint-config-lisk-base": "2.0.1",
		"eslint-plugin-import": "2.22.1",
		"eslint-plugin-jest": "24.3.2",
		"glob": "7.1.7",
		"jest": "26.6.3",
		"jest-extended": "0.11.5",
		"jest-when": "3.2.1",
		"js-yaml": "4.1.0",
		"prettier": "2.2.1",
		"source-map-support": "0.5.19",
		"ts-jest": "26.5.4",
		"ts-node": "9.1.1",
		"tsconfig-paths": "3.9.0",
		"typescript": "4.2.3"
	}
