{
	"apps": [
		{
			"name": "lisk.app",
			"script": "src/index.js",
			"cwd": ".",
			"pid_file": "./pids/lisk.app.pid",
			"out_file": "./logs/lisk.app.log",
			"error_file": "./logs/lisk.app.err",
			"log_date_format": "YYYY-MM-DD HH:mm:ss SSS",
			"watch": false,
			"kill_timeout": 10000,
			"max_memory_restart": "1024M",
			"node_args": "--max_old_space_size=1024",
			"args": "-c config.json",
			"min_uptime": 20000,
			"max_restarts": 10
		}
	]
}
