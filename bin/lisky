#!/usr/bin/env node
var lisky = require('../dist').default;

function exit() {
	return lisky.exec('exit');
}

function runCommand() {
	var command = process.argv
		.slice(2)
		.join(' ');

	return lisky
		.exec(command)
		.then(exit);
}

module.exports = process.argv.length > 2
	? runCommand()
	: lisky;
