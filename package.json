{
	"name": "lisk-sdk-mono-repo",
	"private": true,
	"version": "0.1.0",
	"description": "Reusable packages for use with the Lisk ecosystem",
	"author": "Lisk Foundation <admin@lisk.io>, lightcurve GmbH <admin@lightcurve.io>",
	"license": "Apache-2.0",
	"keywords": [
		"lisk",
		"blockchain"
	],
	"homepage": "https://github.com/LiskHQ/lisk-sdk#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/LiskHQ/lisk-sdk.git"
	},
	"bugs": {
		"url": "https://github.com/LiskHQ/lisk-sdk/issues"
	},
	"engines": {
		"node": ">=12.13.0 <=12",
		"npm": ">=6.12.0"
	},
	"workspaces": {
		"packages": [
			"framework",
			"elements/*",
			"commander",
			"sdk",
			"sample-app"
		],
		"nohoist": [
			"**@types/mocha",
			"**@types/jest",
			"**jest-extended",
			"**@types/jest-when"
		]
	},
	"scripts": {
		"bootstrap": "lerna bootstrap --hoist --ci",
		"clean": "lerna run clean",
		"clean:node_modules": "lerna clean --yes",
		"format": "npm run format:root && lerna run format",
		"format:root": "prettier --write types/**/*.ts",
		"lint": "npm run lint:root && lerna run lint",
		"lint:fix": "npm run lint:root -- --fix && lerna run lint:fix",
		"lint:root": "tslint -p tsconfig.json types/**/*.ts",
		"test": "lerna run test",
		"build": "lerna run build",
		"init": "./scripts/init.sh"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"devDependencies": {
		"@types/node": "12.12.11",
		"ansi-regex": "5.0.0",
		"eslint": "6.2.0",
		"eslint-config-airbnb-base": "14.0.0",
		"eslint-config-lisk-base": "1.2.2",
		"eslint-plugin-chai-expect": "2.0.1",
		"eslint-plugin-import": "2.18.2",
		"eslint-plugin-jest": "23.0.5",
		"eslint-plugin-mocha": "6.0.0",
		"husky": "1.3.1",
		"istanbul-lib-coverage": "3.0.0",
		"istanbul-lib-report": "3.0.0",
		"istanbul-reports": "3.0.0",
		"lerna": "3.20.2",
		"lint-staged": "8.1.3",
		"prettier": "1.19.1",
		"tslint": "5.20.1",
		"tslint-config-prettier": "1.18.0",
		"tslint-immutable": "6.0.1",
		"typescript": "3.7.2",
		"yarn": "1.22.0"
	}
}
